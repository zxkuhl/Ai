<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>MiniTransformerAI</RootNamespace>
    <AssemblyName>MiniTransformerAI</AssemblyName>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <Optimize>true</Optimize>
    <AllowedOutputExtensionsInPackageLockFile>$(AllowedOutputExtensionsInPackageLockFile);.pdb</AllowedOutputExtensionsInPackageLockFile>
    <!-- Maximize CPU parallelism -->
    <RuntimeIdentifiers>win-x64;win-x86;linux-x64;osx-x64</RuntimeIdentifiers>
  </PropertyGroup>

</Project>
